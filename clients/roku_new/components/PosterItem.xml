<?xml version = "1.0" encoding = "utf-8" ?>
<component name = "PosterItem" extends = "Group">

  <interface>
    <field id = "itemContent" type = "node" onChange = "itemContentChanged"/>
    <field id = "width" type = "float" onChange = "widthChanged"/> 
    <field id = "height" type = "float" onChange = "heightChanged"/> 
  </interface>

  <script type="text/brightscript" uri="pkg:/components/PosterItem.brs" />

  <children>
    <Poster 
      id = "itemPoster" 
      translation = "[0, 0]" 
      width = "200" 
      height = "300"
      loadDisplayMode = "scaleToFit" 
    />
    <Label 
      id = "itemLabel" 
      translation = "[0, 310]" 
      width = "200" 
      height = "30" 
      font = "font:SmallSystemFont" 
      horizAlign = "center" 
      color="#FFFFFF"
      opacity="0.8"
    />
  </children>
</component>
