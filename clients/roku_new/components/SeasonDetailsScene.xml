<?xml version="1.0" encoding="utf-8" ?>
<component name="SeasonDetailsScene" extends="Group">
    <script type="text/brightscript" uri="pkg:/source/api.brs" />
    <interface>
        <field id="show_id" type="string" />
        <field id="season_id" type="string" />
        <field id="season_title" type="string" />
        <field id="server_url" type="string" />
        <field id="auth_token" type="string" />
        <field id="backdrop_url" type="string" />
        <field id="wasClosed" type="bool" value="false" />
    </interface>
    <children>
        <!-- Background -->
        <Rectangle 
            id="bg" 
            width="1920" 
            height="1080" 
            color="#0a0a0a" 
        />

        <!-- Backdrop Image (Dimmed) -->
        <Poster 
            id="backdrop"
            width="1920"
            height="1080"
            opacity="0.2"
            loadDisplayMode="scaleToFit"
        />

        <!-- Header -->
        <Label 
            id="title" 
            text="Episodes"
            font="font:LargeBoldSystemFont" 
            color="#FFFFFF" 
            translation="[100, 50]" 
        />

        <!-- Episodes Grid (Vertical List of Landscape Cards) -->
        <!-- itemSize approx 300x(169+meta) -->
        <PosterGrid 
            id="episodeGrid"
            translation="[100, 150]"
            basePosterSize="[300, 169]" 
            itemSpacing="[40, 40]" 
            numColumns="4"
            numRows="5"
            caption1NumLines="1"
            caption2NumLines="1"
        />

        <!-- Loading Label -->
        <Label 
            id="loadingLabel"
            text="Loading Episodes..."
            translation="[860, 500]"
            font="font:LargeBoldSystemFont"
            color="#FFFFFF"
        />
        
        <!-- Video Player -->
        <Video 
            id="videoPlayer" 
            width="1920" 
            height="1080"
            visible="false"
            enableUI="true"
        />
    </children>
    
    <script type="text/brightscript" uri="pkg:/components/SeasonDetailsScene.brs" />
</component>
